@page
@model MedicalSearchingPlatform.Pages.MedicalRecordPage.DeleteModel
@{
    ViewData["Title"] = "Delete Medical Record";
}

<div class="dashboard container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="text-white">Delete Medical Record</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">Are you sure you want to delete this record?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.Patient.User.FullName)</dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.Doctor.User.FullName)</dd>

                <dt class="col-sm-3">Record Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.RecordDate)</dd>

                <dt class="col-sm-3">Diagnosis</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.Diagnosis)</dd>

                <dt class="col-sm-3">Treatment</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.Treatment)</dd>

                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalRecord.Notes)</dd>

                <dt class="col-sm-3">Attachment</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalRecord.AttachmentUrl)
                </dd>

                <dt class="col-sm-3">Shared</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.MedicalRecord.IsShared ? "bg-success" : "bg-secondary")">
                        @(Model.MedicalRecord.IsShared ? "Yes" : "No")
                    </span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form method="post" onsubmit="return confirm('Are you sure you want to delete this medical record? This action cannot be undone!');">
                <input type="hidden" asp-for="MedicalRecord.MedicalRecordId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
