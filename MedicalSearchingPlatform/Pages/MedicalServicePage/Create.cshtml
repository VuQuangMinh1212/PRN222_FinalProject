@page
@model MedicalSearchingPlatform.Pages.MedicalServicePage.CreateModel

@{
    ViewData["Title"] = "Create Medical Service";
}

<div class="create-account container mt-5">
    <h2 class="text-center">Create Medical Service</h2>

    <div class="card shadow-lg form-edit">
        <form method="post" id="createForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="MedicalService.ServiceName" class="form-label fw-bold">Service Name</label>
                <input asp-for="MedicalService.ServiceName" class="form-control" required />
                <span asp-validation-for="MedicalService.ServiceName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MedicalService.Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="MedicalService.Description" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="MedicalService.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MedicalService.Status" class="form-label fw-bold">Status</label>
                <select asp-for="MedicalService.Status" class="form-select" required>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="MedicalService.Status" class="text-danger"></span>
            </div>

            <div class="text-center mt-4 d-flex justify-content-center gap-2">
                <button type="button" class="btn-create-new-account " data-bs-toggle="modal" data-bs-target="#confirmCreateModal">
                    Create Service
                </button>
                <a asp-page="Index" class="btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

<!-- 🔹 Confirm Create Modal -->
<div class="modal fade" id="confirmCreateModal" tabindex="-1" aria-labelledby="confirmCreateLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmCreateLabel">Confirm Creation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to create this medical service?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" form="createForm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
