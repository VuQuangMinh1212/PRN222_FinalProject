@page
@model MedicalSearchingPlatform.Pages.MedicalServicePage.DeleteModel

@{
    ViewData["Title"] = "Delete Medical Service";
}

<div class="delete-medical container mt-5">
    <h2 class="text-center text-danger">Delete Medical Service</h2>

    <div class="card shadow-lg p-4">
        <div class="alert alert-warning">
            <h5>Are you sure you want to delete this service?</h5>
            <p>This action cannot be undone.</p>
        </div>

        <dl class="row">
            <dt class="col-sm-3">Service Name:</dt>
            <dd class="col-sm-9">@Model.MedicalService.ServiceName</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.MedicalService.Description</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.MedicalService.Status == "Active" ? "bg-success" : "bg-danger")">
                    @Model.MedicalService.Status
                </span>
            </dd>
        </dl>

        <div class="text-center mt-4">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Confirm Delete
            </button>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<!-- 🔹 Confirm Delete Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to permanently delete this medical service?</p>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <input type="hidden" asp-for="MedicalService.ServiceId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
