@page
@model MedicalSearchingPlatform.Pages.ArticlesPage.DetailsModel
<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/ArticlesPage/Index">Articles</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="text-white mb-0">@Model.Article.Title</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Article.Title)</dd>

                <dt class="col-sm-3 text-muted">Content</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Article.Content)</dd>

                <dt class="col-sm-3 text-muted">Published Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Article.PublishedDate)</dd>

                <dt class="col-sm-3 text-muted">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Article.Status == "Published" ? "bg-success" : "bg-secondary")">
                        @Html.DisplayFor(model => model.Article.Status)
                    </span>
                </dd>

                <dt class="col-sm-3 text-muted">Author</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Article.Author.FullName)</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@Html.DisplayFor(model => model.Article.Category.Name)</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-secondary" asp-page="/ArticlesPage/Index">Back to List</a>
        </div>
    </div>
</div>
