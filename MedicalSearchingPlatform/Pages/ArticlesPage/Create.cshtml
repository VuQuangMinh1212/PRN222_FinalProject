@page
@using System.Security.Claims
@model MedicalSearchingPlatform.Pages.ArticlesPage.CreateModel

@{
    Layout = null;
}

<div class="row justify-content-center">
    <div class="col-md-8 mx-auto">
        <form method="post" asp-page="/ArticlesPage/Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Article.AuthorId" type="hidden" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
            <div class="form-group" hidden>
                <label asp-for="Article.ArticleId" class="control-label"></label>
                <input asp-for="Article.ArticleId" class="form-control" />
                <span asp-validation-for="Article.ArticleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Article.Content" class="control-label"></label>
                <input asp-for="Article.Content" class="form-control" />
                <span asp-validation-for="Article.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Article.ArticleCategoryId" class="control-label"></label>
                <select asp-for="Article.ArticleCategoryId" class="form-control" asp-items="Model.ArticleCategories"></select>
            </div>
            <div class="form-group" hidden>
                <span class="text-danger">*</span>
                <label asp-for="Article.PublishedDate" class="control-label"></label>
                <input asp-for="Article.PublishedDate" class="form-control" />
                <span asp-validation-for="Article.PublishedDate" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
