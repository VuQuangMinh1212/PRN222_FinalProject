@page
@model MedicalSearchingPlatform.Pages.MedicalFacilityPage.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="create-account container mt-5">
<h2 class="text-center">Create MedicalFacility</h2>
    <div class="row justify-content-center gap-2">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicalFacility.FacilityId" class="control-label"></label>
                <input asp-for="MedicalFacility.FacilityId" class="form-control" />
                <span asp-validation-for="MedicalFacility.FacilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MedicalFacility.FacilityName" class="control-label"></label>
                <input asp-for="MedicalFacility.FacilityName" class="form-control" />
                <span asp-validation-for="MedicalFacility.FacilityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MedicalFacility.Address" class="control-label"></label>
                <input asp-for="MedicalFacility.Address" class="form-control" />
                <span asp-validation-for="MedicalFacility.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MedicalFacility.Infor" class="control-label"></label>
                <input asp-for="MedicalFacility.Infor" class="form-control" />
                <span asp-validation-for="MedicalFacility.Infor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalFacility.PhoneNumber" class="control-label"></label>
                <input asp-for="MedicalFacility.PhoneNumber" class="form-control" />
                <span asp-validation-for="MedicalFacility.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalFacility.ImageUrl" class="control-label"></label>
                <input asp-for="MedicalFacility.ImageUrl" class="form-control" />
                <span asp-validation-for="MedicalFacility.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center mt-3 gap-2">
                <input type="submit" value="Create" class="btn-save-medical" />
                    <div>
                        <a asp-page="Index" class="btn-back">Back to List</a>
                    </div>
            </div>
        </form>
    </div>
</div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
