@page
@model MedicalSearchingPlatform.Pages.AppointmentPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Appointment.AppointmentId" class="form-control" type="hidden"/>
                <span asp-validation-for="Appointment.AppointmentId" class="text-danger" type="hidden"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Appointment.DoctorId" class="control-label"></label>
                @if (ViewBag.DoctorId != null)
                {
                    <select asp-for="Appointment.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                }
                else
                {
                    <select class="form-control" disabled><option>No doctors available</option></select>
                }
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Appointment.PatientId" class="control-label"></label>
                @if (ViewBag.PatientId != null)
                {
                    <select asp-for="Appointment.PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                }
                else
                {
                    <select class="form-control" disabled><option>No patients available</option></select>
                }
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentInfo" class="control-label"></label>
                <input asp-for="Appointment.AppointmentInfo" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Appointment.Status" class="control-label"></label>
                <input asp-for="Appointment.Status" class="form-control" />
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
