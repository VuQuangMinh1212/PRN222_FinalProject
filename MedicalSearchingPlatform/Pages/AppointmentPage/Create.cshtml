@page
@using System.Security.Claims
@model MedicalSearchingPlatform.Pages.AppointmentPage.CreateModel

<div class="row">
    <div class="col-md-12 mx-auto">
        <form method="post" asp-page="/ApopointmentPage/Create" onsubmit="return jQueryModalPost(event,this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Appointment.AppointmentId" class="form-control" type="hidden" />
                <span asp-validation-for="Appointment.AppointmentId" class="text-danger" type="hidden"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Appointment.DoctorId" class="control-label"></label>
                @if (ViewBag.DoctorId != null)
                {
                    <select id="DoctorId" asp-for="Appointment.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                }
                else
                {
                    <select class="form-control" disabled><option>No doctors available</option></select>
                }
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label for="scheduleDropdown">Available Schedules</label>
                <select id="scheduleDropdown" asp-for="Appointment.ScheduleId" class="form-control">
                    <option value="">Select a schedule</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentInfo" class="control-label"></label>
                <input asp-for="Appointment.AppointmentInfo" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentInfo" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <span class="text-danger">*</span>
                <label asp-for="Appointment.Status" class="control-label"></label>
                <input asp-for="Appointment.Status" class="form-control" />
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#DoctorId").change(function () {
                var doctorId = $(this).val();
                if (doctorId) {
                    $.ajax({
                        url: "/AppointmentPage/Create?handler=Schedules&doctorId=" + doctorId,
                        type: "GET",
                        data: { doctorId: doctorId },
                        success: function (data) {
                            var scheduleDropdown = $("#scheduleDropdown");
                            scheduleDropdown.empty();
                            if (data.length > 0) {
                                var groupedSchedules = {};

                                // Nhóm lịch theo ngày
                                data.forEach(item => {
                                    let date = item.text.split(" | ")[1];
                                    if (!groupedSchedules[date]) {
                                        groupedSchedules[date] = [];
                                    }
                                    groupedSchedules[date].push(item);
                                });

                                // Render danh sách theo ngày
                                scheduleDropdown.append('<option value="">Select a schedule</option>');
                                Object.keys(groupedSchedules).forEach(date => {
                                    scheduleDropdown.append(`<optgroup label="${date}">`);
                                    groupedSchedules[date].forEach(item => {
                                        scheduleDropdown.append(`<option value="${item.value}">${item.text.split(" | ")[0]}</option>`);
                                    });
                                    scheduleDropdown.append(`</optgroup>`);
                                });
                            } else {
                                scheduleDropdown.append('<option value="">No available schedules</option>');
                            }
                        },
                        error: function () {
                            alert("Failed to load schedules. Please try again.");
                        }
                    });
                } else {
                    $("#scheduleDropdown").empty().append('<option value="">Select a schedule</option>');
                }
            });
        });
    </script>
}
