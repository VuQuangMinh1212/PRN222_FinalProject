@page
@model MedicalSearchingPlatform.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Get in Touch</h3>
            <p>If you have any questions, feel free to reach out to us.</p>
            <ul class="list-unstyled">
                <li><strong>Phone:</strong> +1 (123) 456-7890</li>
                <li><strong>Email:</strong> support@medicalsearchingplatform.com</li>
                <li><strong>Address:</strong> 123 Healthcare St, Medical City, USA</li>
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Contact Form</h3>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Name" class="form-label">Your Name</label>
                    <input asp-for="Input.Name" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Your Email</label>
                    <input asp-for="Input.Email" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Message" class="form-label">Your Message</label>
                    <textarea asp-for="Input.Message" class="form-control" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>
