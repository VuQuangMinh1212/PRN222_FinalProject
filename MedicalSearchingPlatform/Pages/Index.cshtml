<section class="section-1 mt-5">
    <div class="row">
        <div class="colum-left col-md-6 text-white p-4 rounded">
            <h2>Why Choose FUMedical?</h2>
            <p>
                FUMedical connects patients with top healthcare professionals and medical facilities, ensuring convenient access to quality medical services.
                Our platform simplifies appointment scheduling, reduces waiting times, and enhances the overall healthcare experience.
            </p>
            <a href="#" class="btn btn-light">Learn More</a>
        </div>
        <div class="col-md-6 d-flex">
            <div class="row">
                <div class="col-md-6">
                    <div class="colum-right card shadow-sm p-3 mb-3">
                        <i class="bi bi-clipboard2-check display-4"></i>
                        <h4>Verified Professionals</h4>
                        <p>Consult experienced and certified doctors with proven expertise in their fields.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="colum-right card shadow-sm p-3 mb-3">
                        <i class="bi bi-gem display-4"></i>
                        <h4>Comprehensive Services</h4>
                        <p>Find specialized medical care, from routine checkups to advanced treatments.</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="colum-right card shadow-sm p-3">
                        <i class="bi bi-box-seam display-4"></i>
                        <h4>Seamless Appointments</h4>
                        <p>Book, manage, and track your medical appointments with ease through our platform.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Newest Facilities Section -->
<section class="section-2">
    <h2 class="text-center">Newest Facilities</h2>
    <div class="d-flex justify-content-center flex-wrap gap-4">
        @if (Model.LatestFacilities != null && Model.LatestFacilities.Any())
        {
            @foreach (var facility in Model.LatestFacilities)
            {
                <div class="facilities">
                    <a asp-page="/MedicalFacilityPage/Details" asp-route-id="@facility.FacilityId" class="text-decoration-none">
                        <div class="card shadow-sm">
                            <img src="@facility.ImageUrl" class="card-img-top" alt="@facility.FacilityName">
                            <div class="card-body">
                                <h5 class="card-title">@facility.FacilityName</h5>
                                <p class="card-text">@facility.Infor</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="text-center">No facilities available.</p>
        }
    </div>
</section>

<!-- Newest Doctors Section -->
<section class="section-3">
    <h2 class="text-center">Our Newest Doctors</h2>
    <div class="d-flex justify-content-center flex-wrap gap-4">
        @if (Model.LatestDoctors != null && Model.LatestDoctors.Any())
        {
            @foreach (var doctor in Model.LatestDoctors)
            {
                <div class="facilities">
                    <a asp-page="/DoctorPage/Details" asp-route-id="@doctor.DoctorId" class="text-decoration-none">
                        <div class="card shadow-sm">
                            <img src="@doctor.ImageUrl" class="card-img-top" alt="@doctor.User.FullName">
                            <div class="card-body">
                                <h5 class="card-title">@doctor.User.FullName</h5>
                                <p class="card-text">@doctor.Specialization</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="text-center">No doctors available.</p>
        }
    </div>
</section>

